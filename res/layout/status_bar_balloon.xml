<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip" />
    <TextView android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffffff" />
    
    <ViewFlipper
        android:layout_width="0dp"
        android:layout_weight="1"
        android:id="@+id/flipper"
        android:inAnimation="@anim/fullscreen_enter_slide_up"
        android:outAnimation="@anim/fullscreen_exit_slide_up"
        android:autoStart="true"
        android:flipInterval="3000"
        android:layout_height="match_parent">
<!--
        android:autoStart="true"
                android:flipInterval="4000"
        android:animateFirstView="false"
-->


        <TextView
            android:gravity="center_vertical"
        android:layout_width="match_parent"
            android:id="@+id/text1"
        android:layout_height="match_parent"
        android:text="11111111111111"/>

        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text2"
            android:text="222222222222222"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text3"
            android:text="33333333333333"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text4"
            android:text="4444444444444444"/>
        <TextView
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/text5"
            android:text="55555555555555"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text6"
            android:text="6666666666666666666"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7777777777777777"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="888888888888888"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="999999999999999"/>
     </ViewFlipper>
</LinearLayout>